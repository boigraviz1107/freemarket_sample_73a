%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :ニックネーム
    %br/
    = f.text_field :nickname, placeholder: '例) メルカリ太郎'
  .field
    = f.label :メールアドレス
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :パスワード
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .field
    = f.label :お名前（全角）
    %br/
    = f.text_field :last_name, placeholder:'例) 山田'
    = f.text_field :first_name, placeholder: '例) 彩'
  .field
    = f.label :お名前カナ（全角）
    %br/
    = f.text_field :last_name_hira, placeholder:'例) やまだ'
    = f.text_field :first_name_hira, placeholder: '例) あや'
  .field
    = f.label :生年月日
    %br/
    = raw sprintf(f.date_select(:birth_date, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 18), default: Date.new(1989, 1, 1), date_separator: '%s'),'年 ', '月 ') + '日'                 

   
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"

